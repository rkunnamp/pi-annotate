{
  "manifest_version": 3,
  "name": "Pi Annotate",
  "version": "0.3.1",
  "description": "Visual annotation tool for Pi coding agent",
  
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "commands": {
    "toggle-picker": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle element picker"
    }
  },
  
  "action": {
    "default_title": "Pi Annotate",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
